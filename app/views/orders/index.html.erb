<% if @orders.any?%>
<div class="col-md-10 col-md-offset-1">
    <div class="col-md-7">
        <div class="col-md-6">
            <strong>商品信息</strong>
        </div>
        <div class="col-md-3">
            <strong>单价(元)</strong>
        </div>
        <div class="col-md-3">
            <strong>数量</strong>
        </div>
    </div>
    <div class="col-md-2">
        <strong>实付款</strong>
    </div>
    <div class="col-md-3">
        <strong>交易状态</strong>
    </div>
    <br>
    <% @orders.each do |order|%>
        <div class="panel panel-info">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <% order.items.each do |i|%>
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-md-3">
                                <%= link_to image_tag(i.product.picture, size: "50x50"), product_path(i.product)%>
                            </div>
                            <div class="col-md-3">
                                <%=link_to i.product.name, product_path(i.product)%>
                            </div>
                            <div class="col-md-3">
                                <%= i.product.price%>
                            </div>
                            <div class="col-md-3">
                                <%= i.quantity%>
                            </div>
                        </div>
                       
                    </div>
                    <%end%>
                        <div class="col-md-2">
                            <%= order.total%>元</div>
                        <div class="col-md-3">
                            <%= link_to '订单详情',order_path(order)%>
                        </div>
            </div>
        </div>
        <%end%>
            <%= will_paginate @orders %>
</div>
<% else%>
 <div class="notify">没有任何订单记录</div>
<%end%>