<% if @banners.any? %>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <% (@banners.count - 1).times do |n|%>
    <li data-target="#carousel-example-generic" data-slide-to="<%= n+1%>"></li>
     <%end%>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner carousel-container" role="listbox">
   
    <% @banners.each do |b|%>
     <% if b == @banners.first%>
      <div class="item active">
        <%= link_to (image_tag b.picture),"http://#{b.url}"%>
      <div class="carousel-caption">
        
      </div>
      </div>
     <%else%>
      <div class="item">
        <%=link_to (image_tag b.picture),"http://#{b.url}"%>
      <div class="carousel-caption">
        
      </div>
    </div>
     <%end%>
      
    <%end%>

  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="sr-only">Next</span>
  </a>
</div>

<%end%>

<div class="album text-muted">
    <div class="container-fluid">
        <div class="col-md-10">
            <h2> </h2>
            <%= render @products%>

            
        </div>
        <% if @hot_sales.any? %>
        <div class="col-md-2">
           <h2>热卖</h2>
           <hr>      
                        <% @hot_sales.each do |product|%>
                           <div class="hot_sales">
                               <div> <%= link_to (image_tag product.picture), product_path(product)%></div>
                               <div>
                                <div><%= link_to product.name, product_path(product)%></div><strong class="red_color">$<%= product.price%></strong><strong class="pull-right">销量：<%= product.sales%></strong>
                                </div>
                             </div>
                            <%end%>
                   
               
          
        </div>
        <% end%>
    </div>
</div>


