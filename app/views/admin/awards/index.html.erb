<table class="table table-hover">
    <thead class="table-inverse">
        <tr>
            <th>奖品名</th>
            <th> 剩余数量</th>
            <th>有效期至</th>
            <th>中奖率(基数：万)</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @awards.each do |a|%>
            <tr>
                <td>
                    <%= a.name%>
                </td>
                <td>
                    <%= a.quantity%>
                </td>
                <td>
                    <%= format_time(a.expire_at)%>
                </td>
                <td>
                    <%= a.odds%>/10000</td>
                <td>
                    <%= link_to '修改 ',edit_admin_award_path(a)%> |
                    <%= link_to '删除',admin_award_path(a),method: :delete%>
                </td>
            </tr>
            <%end%>
    </tbody>
</table>

<div class="col-md-6">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">创建新奖项</h3>
        </div>
        <div class="panel-body">
            <%= simple_form_for [:admin,@award] do |f|%>
            <%= f.input :name,label: "奖品名"%>
            <%= f.input :quantity,label: "数量"%>
            <div class="form-inline">
            <%= f.input :expire_at,label: "有效期至",class: "form-control"%>
            </div>
            <%= f.input :odds,label: "中奖率(基数：万)"%>
            <%= f.submit 'submit',class: "btn btn-primary btn-lg"%>
            <%end%>
        </div>
    </div>
</div>